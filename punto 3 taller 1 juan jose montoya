public class Main{

    public static boolean esPar(int numero) {
        return numero % 2 == 0;
    }

    public static void main(String[] args) {
        int numero = 4;
        if (esPar(numero)) {
            System.out.println("SÃ­ es par");
        } else {
            System.out.println("No es par");
        }
    }

}
